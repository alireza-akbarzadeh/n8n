# =============================================================================
# TEST ENVIRONMENT CONFIGURATION
# =============================================================================
# This file is used for running tests
# You can commit this file as it contains no secrets

NODE_ENV=test

# Test Database (separate from development)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/n8n_test?schema=public

# Test Auth Configuration
NEXTAUTH_SECRET=test-secret-key-at-least-32-characters-long-for-testing
NEXTAUTH_URL=http://localhost:3000

# Disable external services in tests
INNGEST_EVENT_KEY=test-key
INNGEST_SIGNING_KEY=test-signing-key

# Mock Sentry in tests
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# Test logging
LOG_LEVEL=error

# Disable rate limiting in tests
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Test feature flags
ENABLE_ANALYTICS=false

# Test API configuration
API_RATE_LIMIT_MAX=1000
API_RATE_LIMIT_WINDOW=1h
