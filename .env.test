# =============================================================================
# TEST ENVIRONMENT CONFIGURATION
# =============================================================================
# This file is used for running tests
# You can commit this file as it contains no secrets

NODE_ENV=test

# Test Database (separate from development)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/n8n_test?schema=public

# Test Auth Configuration (Better Auth)
BETTER_AUTH_SECRET=test-secret-key-at-least-32-characters-long-for-testing-purposes-only
BETTER_AUTH_URL=http://localhost:3000

# Application name
NEXT_PUBLIC_APP_NAME=Nodebase

# Encryption key for tests
ENCRYPTION_KEY=test-encryption-key-at-least-32-characters-long-for-testing

# Disable external services in tests
INNGEST_EVENT_KEY=test-key
INNGEST_SIGNING_KEY=test-signing-key

# Mock OAuth in tests
GITHUB_CLIENT_ID=test-github-client-id
GITHUB_CLIENT_SECRET=test-github-client-secret

# Mock Polar in tests
POLAR_ACCESS_TOKEN=
POLAR_SUCCESS_URL=http://localhost:3000/success
POLAR_SERVER=sandbox

# Mock AI providers in tests
GOOGLE_GENERATIVE_AI_API_KEY=

# Mock Sentry in tests
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# Test logging
LOG_LEVEL=error

# Disable rate limiting in tests
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=
RATE_LIMIT_ENABLED=false

# Test feature flags
ENABLE_ANALYTICS=false

# Test API configuration
API_RATE_LIMIT_MAX=1000
API_RATE_LIMIT_WINDOW=1h
