{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/features/*": ["./src/features/*"],
      "@/shared/*": ["./src/shared/*"],
      "@/core/*": ["./src/core/*"],
      "@/app/*": ["./src/app/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/shared/infrastructure/*", "./src/shared/ui/utils/*", "./src/core/auth/*", "./src/core/api/*", "./src/shared/application/services/*"],
      "@/actions/*": ["./src/core/auth/*"],
      "@/config/*": ["./src/core/config/*"],
      "@/hooks/*": ["./src/shared/ui/hooks/*"],
      "@/inngest/*": ["./src/inngest/*"],
      "@/modules/*": ["./src/features/*"],
      "@/trpc/*": ["./src/trpc/*"],
      "@/types/*": ["./src/core/types/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
